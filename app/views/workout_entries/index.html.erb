<h1>WorkoutEntries#index</h1>
<p>Find me in app/views/workout_entries/index.html.erb</p>

<h1><%= @year %>年<%= @month %>月</h1>

<%= form_with url: '/admin/workouts/monthly', id: 'form' do |f| %>
    <%= f.text_field 'id' %>
    <%= f.text_field 'workout_name' %>
    <%= f.submit 'submit' %>
<% end %>

